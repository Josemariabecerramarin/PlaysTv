<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011900"
    tools:context=".MenuPerfilFragment">



    <ImageButton
        android:id="@+id/logoVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/logo2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout
        android:id="@id/cambiarImagenPerfil"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/logoVolver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageButton4">

        <ImageButton
            android:id="@+id/cambiarImagenPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/perfil" />

        <TextView
            android:id="@+id/textViewPerfil"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Cambiar imagen de perfil"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:translationX="75dp"
            android:translationY="-39dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/imageButton4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/cambiarImagenPerfil"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageButton7">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/cambiarapodo" />
        <TextView
            android:id="@+id/textViewApodo"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Cambiar apodo"
            android:textColor="@color/white"
            android:translationY="-39dp"
            android:translationX="75dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/imageButton7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/imageButton4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageButton8">

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="63dp"
            android:layout_height="match_parent"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/cambiarkey" />
        <TextView
            android:id="@+id/textViewKey"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Cambiar contraseña"
            android:textColor="@color/white"
            android:translationY="-39dp"
            android:translationX="75dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/imageButton8"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/imageButton7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageButton9">

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/cuentanueva" />
        <TextView
            android:id="@+id/textViewCuenta"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Añadir nueva cuenta"
            android:textColor="@color/white"
            android:translationY="-39dp"
            android:translationX="75dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/imageButton9"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/imageButton8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#03FFFFFF"
            android:src="@drawable/cerrarsesion" />
        <TextView
            android:id="@+id/textViewCerrar"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Cerrar sesión"
            android:textColor="@color/white"
            android:translationY="-39dp"
            android:translationX="75dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="410dp"
        android:layout_height="80dp"
        android:background="#0DFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="bottom">

        <ImageButton
            android:id="@+id/botonPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/perfil"
            android:translationX="60dp"
            android:translationY="10dp" />

        <ImageButton
            android:id="@+id/botonCamara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/camara"
            android:translationY="10dp" />

        <ImageButton
            android:id="@+id/botonSuscripciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/suscripciones"
            android:translationX="-60dp"
            android:translationY="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>