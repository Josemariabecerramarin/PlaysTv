<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".suscripcionFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011900">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011900">

    <ImageButton
        android:id="@+id/logoVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/logo2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/botonFlecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/flecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/logoxokas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/logoVolver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/nombre"
        app:layout_constraintBottom_toTopOf="@id/juego"/>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="elXokas"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@+id/logo"
        app:layout_constraintRight_toLeftOf="@+id/suscriptores"
        app:layout_constraintTop_toBottomOf="@id/logoVolver"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/suscriptores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="579.786"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/logoVolver"
        app:layout_constraintLeft_toRightOf="@id/nombre"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"/>

    <ImageView
        android:id="@+id/seguir"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/suscribirse2"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/nombre"
        app:layout_constraintLeft_toRightOf="@id/logo"/>

    <ImageView
        android:id="@+id/campana"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/notification"
        app:layout_constraintTop_toBottomOf="@id/nombre"
        app:layout_constraintLeft_toRightOf="@id/seguir"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/juego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/juego"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/descripcion"/>

    <LinearLayout
        android:id="@+id/descripcion"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/juego"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/xokas"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/xokas"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esto no es un juego"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="elXokas"
            android:textColor="@color/white"
            android:translationY="20dp"
            android:translationX="-123dp"/>

        <TextView
            android:layout_width="170dp"
            android:layout_height="15dp"
            android:text="356.577 visualizaciones"
            android:textColor="@color/white"
            android:translationX="-20dp" />

        <TextView
            android:id="@+id/verComentarios"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="Ver comentarios"
            android:textColor="@color/white"
            android:translationX="-190dp"
            android:translationY="20dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>