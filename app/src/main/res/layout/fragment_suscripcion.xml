<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".suscripcionFragment"
    android:background="#011900">

    <ImageButton
        android:id="@+id/logoVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/logo2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/logoxokas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/logoVolver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/nombre"/>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="elXokas"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintLeft_toRightOf="@+id/logo"
        app:layout_constraintRight_toLeftOf="@+id/suscriptores"
        app:layout_constraintTop_toBottomOf="@id/logoVolver"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/suscriptores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="579.786"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/logoVolver"
        app:layout_constraintLeft_toRightOf="@id/nombre"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"/>

    <ImageView
        android:id="@+id/seguir"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/suscribirse2"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/nombre"
        app:layout_constraintLeft_toRightOf="@id/logo"/>

    <ImageView
        android:id="@+id/campana"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/notification"
        app:layout_constraintTop_toBottomOf="@id/nombre"
        app:layout_constraintLeft_toRightOf="@id/seguir"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
